@model FirstAppWithDapper.ViewModels.ProductVM
<div class="card">
    <div class="card-header">
        Edit Product
    </div>
    <div class="card-body">
        <form asp-action="EditWithSP">
            <input type="hidden" asp-for="ProductId" />
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>Product Name:</label>
                    <input class="form-group" asp-for="ProductName" />
                </div>
                <div class="form-group col-md-6">
                    <label>Unit Price:</label>
                    <input class="form-group" asp-for="UnitPrice" />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>Category:</label>
                    <select class="form-control" asp-for="CategoryId"
                            asp-items="@(new SelectList(ViewBag.Categories,"CategoryId","CategoryName"))">
                        <option>Select Category...</option>
                    </select>
                </div>
                <div class="form-group col-md-6">
                    <label>Supplier:</label>
                    <select class="form-control" asp-for="SupplierId"
                            asp-items="@(new SelectList(ViewBag.Suppliers,"SupplierId","CompanyName"))">
                        <option>Select Supplier...</option>
                    </select>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <button type="submit" class="btn btn-success">Update Product</button>
                </div>
                
            </div>
        </form>
    </div>
</div>